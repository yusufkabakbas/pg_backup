# Backend Environment Configuration

# Server
PORT=3000
NODE_ENV=development

# Database Connection
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=postgres

# pgBackRest Configuration
PGBACKREST_CONTAINER=pgbackrest
PGBACKREST_CONFIG_PATH=/app/config/pgbackrest.conf
PGBACKREST_LOG_PATH=/var/log/pgbackrest/pgbackrest.log

# Backup Scripts
SCRIPTS_PATH=/app/scripts
CONFIG_PATH=/app/config

# CORS Settings
ALLOWED_ORIGINS=http://localhost,http://localhost:3001,http://localhost:80,http://frontend 